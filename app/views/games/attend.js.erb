<% possibilities = [["red", "no"], ["green", "yes"]]
  from, to = *(@attending ? possibilities : possibilities.reverse) %>
$("#game-attendance-<%= @game %> .button")
  .removeClass("<%= from[0] %>")
  .addClass("<%= to[0] %>")
  .html("<%= "not " unless @attending %>coming")
  .parent()
  .removeClass("<%= from[1] %>")
  .addClass("<%= to[1] %>")
  .children("i").addClass("hidden");
